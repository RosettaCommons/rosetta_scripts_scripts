<ROSETTASCRIPTS>
  <SCOREFXNS>
    <ScoreFunction name="sfxn" weights="ref2015"/>
    <!-- Normal fa_rep weight is 0.55 -->


    <ScoreFunction name="sfxn_pack1" weights="ref2015">
      <Reweight scoretype="fa_rep" weight="0.03245"/> <!-- 0.55 * 0.059 -->
    </ScoreFunction>

    <ScoreFunction name="sfxn_min1" weights="ref2015">
      <Reweight scoretype="fa_rep" weight="0.0506"/> <!-- 0.55 * 0.092 -->
    </ScoreFunction>


    <ScoreFunction name="sfxn_pack2" weights="ref2015">
      <Reweight scoretype="fa_rep" weight="0.154"/> <!-- 0.55 * 0.280 -->
    </ScoreFunction>

    <ScoreFunction name="sfxn_min2" weights="ref2015">
      <Reweight scoretype="fa_rep" weight="0.17765"/> <!-- 0.55 * 0.323 -->
    </ScoreFunction>


    <ScoreFunction name="sfxn_pack3" weights="ref2015">
      <Reweight scoretype="fa_rep" weight="0.3124"/> <!-- 0.55 * 0.568 -->
    </ScoreFunction>

    <ScoreFunction name="sfxn_min3" weights="ref2015">
      <Reweight scoretype="fa_rep" weight="0.34815"/> <!-- 0.55 * 0.633 -->
    </ScoreFunction>

  </SCOREFXNS>

  <TASKOPERATIONS>
    InitializeFromCommandline name="ifc"
    <SetIGType name="linmem_ig" lin_mem_ig="1"/>
    <ExtraRotamersGeneric name="ex1ex2" ex1="1" ex2="1" />
    <IncludeCurrent name="curr" />
  </TASKOPERATIONS>

  <MOVERS>
    <FastDesign name="fast_design" relaxscript="MonomerDesign2019" scorefxn="sfxn" task_operations="linmem_ig,ex1ex2,curr"/>

    <PackRotamersMover scorefxn="sfxn_pack1" task_operations="linmem_ig,ex1ex2,curr" name="pack1"/>
    <MinMover chi="true" bb="true" scorefxn="sfxn_min1" name="min1" tolerance="0.01"/>

    <PackRotamersMover scorefxn="sfxn_pack2" task_operations="linmem_ig,ex1ex2,curr" name="pack2"/>
    <MinMover chi="true" bb="true" scorefxn="sfxn_min2" name="min2" tolerance="0.01"/>

    <PackRotamersMover scorefxn="sfxn_pack3" task_operations="linmem_ig,ex1ex2,curr" name="pack3"/>
    <MinMover chi="true" bb="true" scorefxn="sfxn_min3" name="min3" tolerance="0.01"/>

    <PackRotamersMover scorefxn="sfxn" task_operations="linmem_ig,ex1ex2,curr" name="pack4"/>
    <MinMover chi="true" bb="true" scorefxn="sfxn" name="min4" tolerance="0.00001"/>

    <AcceptToBestMover name="accept_to_best" scorefxn="sfxn"/>
  </MOVERS>

  <PROTOCOLS>
    <Add mover="accept_to_best"/>

    <Add mover="pack1"/>
    <Add mover="min1"/>
    <Add mover="pack2"/>
    <Add mover="min2"/>
