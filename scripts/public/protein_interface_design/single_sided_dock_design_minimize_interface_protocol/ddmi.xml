                <PackRotamersMover name="pack_rot3" scorefxn="talaris2014_rep0p3" task_operations="rti_taskop,keep_curr,ex1,ex2,exchi1,disable_chainA_design"/>
                <MinMover name="min3" scorefxn="talaris2014_rep0p3" bb="0" chi="1" jump="1"/>
